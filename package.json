{
  "name": "jonas-jensen.com",
  "private": true,
  "version": "0.1.0",
  "description": "Source code for jonas.jensen.com",
  "main": "index.js",
  "scripts": {
    "copy:images": "cpy img/* public/img",
    "copy:assets": "cpy assets/* public",
    "copy": "npm run copy:images && npm run copy:assets",
    "build:js": "uglifyjs ./js/** --compress --mangle --output public/bundle.js",
    "build:html": "html-minifier index.html --collapse-whitespace --minify-css > public/index.html",
    "build:clean": "rimraf public && make-dir public",
    "build": "npm run build:clean && npm run copy && npm run build:js && npm run build:html",
    "publish": "npm run build && firebase deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/j0nas/jonas-jensen.com.git"
  },
  "author": "Jonas Jensen <jonas.jensen@msn.com> (http://jonas-jensen.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/j0nas/jonas-jensen.com.git/issues"
  },
  "homepage": "http://jonas-jensen.com",
  "devDependencies": {
    "cpy-cli": "^1.0.1",
    "html-minifier": "^3.5.1",
    "make-dir-cli": "^1.0.0",
    "rimraf": "^2.6.1",
    "uglify-js": "^3.0.11"
  }
}
